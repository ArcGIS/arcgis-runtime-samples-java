<?import com.esri.arcgisruntime.mapping.view.MapView?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<StackPane fx:controller="com.esri.samples.add_features_with_contingent_values.AddFeaturesWithContingentValuesController"
           xmlns:fx="http://javafx.com/fxml" stylesheets="/add_features_with_contingent_values/style.css">
    <!--SDK MapView-->
    <MapView fx:id="mapView"/>
    <VBox StackPane.alignment="TOP_RIGHT" spacing="5" maxWidth="200" maxHeight="50" styleClass="panel-region" fx:id="vBox" disable="true">
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>
        <background>
            <Background>
                <fills>
                    <BackgroundFill>
                        <fill>
                            <Color opacity="0.3"/>
                        </fill>
                    </BackgroundFill>
                </fills>
            </Background>
        </background>
        <Label text="Status Attribute"/>
        <ComboBox fx:id="statusComboBox" promptText="Select status:" onAction="#handleStatusComboBox"/>
        <Label text="Protection Attribute"/>
        <ComboBox fx:id="protectionComboBox" promptText="Select protection:" onAction="#handleProtectionComboBox"/>
        <Label fx:id="label" text="Exclusion Area Buffer Size: "/>
        <Slider fx:id="bufferSlider" onMouseDragged="#handleBufferSlider" onMouseReleased="#handleBufferSlider" showTickLabels="true" style="-fx-font-size: 14"/>
        <Button fx:id="saveButton" text="Save Feature" onAction="#handleSaveButton" />
        <Button fx:id="discardButton" text="Discard Feature" onAction="#deleteFeature"/>

    </VBox>
    
</StackPane>