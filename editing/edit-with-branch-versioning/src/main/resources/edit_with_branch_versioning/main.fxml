<?import javafx.scene.layout.StackPane?>
<?import com.esri.arcgisruntime.mapping.view.MapView?>

<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.BackgroundFill?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.ComboBox?>
<StackPane fx:controller="com.esri.samples.edit_with_branch_versioning.EditWithBranchVersioningController" xmlns:fx="http://javafx.com/fxml"
           stylesheets="/edit_with_branch_versioning/style.css">
    <!--SDK MapView-->
    <MapView fx:id="mapView"/>
    <ProgressIndicator fx:id="progressIndicator" maxWidth="25" maxHeight="25"/>
    <!--Controls box-->
    <VBox StackPane.alignment="TOP_LEFT" maxWidth="250" maxHeight="350" spacing="2" styleClass="panel-region">
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>
        <background>
            <Background>
                <fills>
                    <BackgroundFill>
                        <fill>
                            <Color opacity="0.3"/>
                        </fill>
                    </BackgroundFill>
                </fills>
            </Background>
        </background>
        <Label fx:id="currentVersionLabel" text="Current version: "/>
        <Separator/>
        <Button fx:id="switchVersionButton" text="Switch version" onMouseClicked="#switchVersionButtonEvent"/>
        <!--Create new version box-->
        <VBox fx:id="createVersionVBox" StackPane.alignment="TOP_LEFT" maxWidth="300" maxHeight="350" spacing="5" styleClass="panel-region">
            <VBox>
                <Label text="Enter a name"/>
                <TextField fx:id="name"/>
            </VBox>
            <VBox>
                <Label text="Select a version access level"/>
                <ComboBox fx:id="accessComboBox" promptText="Select"/>
            </VBox>
            <VBox>
                <Label text="Enter a description"/>
                <TextArea fx:id="description"/>
            </VBox>
            <VBox>
                <Button fx:id="createVersionButton" text="Create version" onMouseClicked="#createVersion"/>
            </VBox>
        </VBox>
    </VBox>
</StackPane>
