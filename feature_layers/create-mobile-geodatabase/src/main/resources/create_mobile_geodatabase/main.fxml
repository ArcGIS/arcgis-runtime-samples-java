<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.BackgroundFill?>
<?import javafx.scene.paint.Color?>

<?import com.esri.arcgisruntime.mapping.view.MapView?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.esri.samples.create_mobile_geodatabase.CreateMobileGeodatabaseController"
           stylesheets="/create_mobile_geodatabase/style.css">
    <!--SDK MapView-->
    <MapView fx:id="mapView"/>
    <!--Controls box-->
    <VBox StackPane.alignment="TOP_LEFT" spacing="5" maxWidth="180" maxHeight="100" styleClass="panel-region">
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>
        <background>
            <Background>
                <fills>
                    <BackgroundFill>
                        <fill>
                            <Color opacity="0.7"/>
                        </fill>
                    </BackgroundFill>
                </fills>
            </Background>
        </background>
        <StackPane.margin><Insets left="10" top="10"/></StackPane.margin>
        <Label  fx:id="label"
                wrapText="true"/>
        <Button fx:id="createGeodatabaseButton"
                text="Create geodatabase"
                textAlignment="CENTER"
                prefWidth="150"
                onAction="#handleCreateGeodatabase"/>
        <Button fx:id="viewTableButton"
                text="View table"
                textAlignment="CENTER"
                prefWidth="150"
                disable="true"
                onAction="#handleDisplayTable"/>
        <Button fx:id="closeGeodatabaseButton"
                text="Close geodatabase"
                textAlignment="CENTER"
                prefWidth="150"
                disable="true"
                onAction="#handleCloseGeodatabase"/>
    </VBox>
</StackPane>
