<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.BackgroundFill?>
<?import javafx.scene.paint.Color?>
<?import javafx.geometry.Insets?>
<?import com.esri.arcgisruntime.mapping.view.MapView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Button?>
<StackPane fx:controller="com.esri.samples.feature_layers.DisplaySubtypeFeatureLayerController" xmlns:fx="http://javafx.com/fxml"
           stylesheets="/style.css">
    <!--SDK MapView-->
    <MapView fx:id="mapView"/>
    <VBox StackPane.alignment="TOP_RIGHT" maxWidth="260" maxHeight="120" spacing="6" styleClass="panel-region" alignment="TOP_CENTER">
        <StackPane.margin>
            <Insets top="50" right="10"/>
        </StackPane.margin>
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>
        <background>
            <Background>
                <fills>
                    <BackgroundFill>
                        <fill>
                            <Color opacity="0.3"/>
                        </fill>
                    </BackgroundFill>
                </fills>
            </Background>
        </background>
        <Label fx:id="currentMapScaleLabel"/>
        <HBox alignment="CENTER" spacing="15">
            <CheckBox fx:id="checkBox" text="Show sublayer" onAction="#controlSublayerVisibility" selected="true"/>
            <ToggleButton fx:id="toggleRendererButton" text="Toggle Renderer" onAction="#handleToggleRendererButtonClicked"/>
        </HBox>
        <HBox alignment="CENTER" spacing="15">
            <Label fx:id="minScaleLabel" text="Sublayer labelling min scale: not set" maxWidth="100" wrapText="true"/>
            <Button text="Set Minimum Scale"  onAction="#handleMinScaleButtonClicked"/>
        </HBox>
    </VBox>
</StackPane>

