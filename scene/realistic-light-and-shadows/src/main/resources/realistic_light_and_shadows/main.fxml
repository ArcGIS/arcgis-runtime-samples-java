<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import com.esri.arcgisruntime.mapping.view.SceneView?>

<?import javafx.scene.layout.Background?>
<?import javafx.scene.layout.BackgroundFill?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.geometry.Insets?>

<StackPane fx:controller="com.esri.samples.realistic_light_and_shadows.RealisticLightAndShadowsController"
           xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml" stylesheets="/realistic_light_and_shadows/style.css">
    <!--SDK SceneView-->
    <SceneView fx:id="sceneView"/>
    <!--Slider box-->
    <VBox StackPane.alignment="TOP_RIGHT" spacing="6" maxWidth="265" maxHeight="110" styleClass="panel-region">
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>
        <background>
            <Background>
                <fills>
                    <BackgroundFill>
                        <fill>
                            <Color opacity="0.3"/>
                        </fill>
                    </BackgroundFill>
                </fills>
            </Background>
        </background>
        <Label fx:id="time"/>
        <Button fx:id="noSunButton" text="No sun light effect" maxWidth="Infinity"/>
        <Button fx:id="sunOnlyButton" text="Sun light only" maxWidth="Infinity"/>
        <Button fx:id="sunAndShadowsButton" text="Sun light with shadows" maxWidth="Infinity"/>
        <Slider fx:id="timeSlider" value="12" max="24" majorTickUnit="4" minorTickCount="60" showTickMarks="true"
                showTickLabels="true" onMouseDragged="#changeTimeOfDay">
            <padding>ime
                <Insets topRightBottomLeft="10"/>
            </padding>
        </Slider>
    </VBox>
</StackPane>
