<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import com.esri.arcgisruntime.mapping.view.SceneView?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.esri.samples.kml.play_kml_tours.PlayKMLToursController">
    <center>
        <SceneView fx:id="sceneView"/>
    </center>
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="resetButton" onAction="#resetTour">
                <graphic>
                    <ImageView>
                        <Image url="/icons/replay.png"/>
                    </ImageView>
                </graphic>
            </Button>
            <Button fx:id="playButton" onAction="#togglePlay"/>
            <Slider fx:id="playSlider" HBox.hgrow="ALWAYS"/>
            <!--<Button fx:id="audioButton" onAction="#toggleAudio"/>-->
        </HBox>
    </bottom>
</BorderPane>
